<?xml version='1.0' encoding='utf-8'?>
<plugin id="com.smothers.plugins.twitterplugin" version="0.1.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">

    <name>TwitterPlugin</name>
    <description>This plugin wraps the native iOS Accounts framework for Twitter.</description>
    <author>chris.smothers@gmail.com</author>
    <keywords>twitter,ios,cordova</keywords>
    
    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>    

    <js-module name="TwitterPlugin" src="www/TwitterPlugin.js">
        <clobbers target="cordova.plugins.TwitterPlugin" />
    </js-module>

    <platform name="ios">

        <config-file target="config.xml" parent="/*">
            <feature name="TwitterPlugin">
                <param name="ios-package" value="TwitterPlugin" />
            </feature>
        </config-file>    

        <header-file src="src/ios/TwitterPlugin.h" />
        <source-file src="src/ios/TwitterPlugin.m" /> 

        <framework src="Accounts.framework" />
        <framework src="Twitter.framework" />
        
    </platform>

</plugin>